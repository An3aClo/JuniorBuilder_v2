@using JuniorBuilder.Controllers
@model JuniorBuilder.Models.ResetPasswordModel
@using (Html.BeginUmbracoForm<ResetPasswordController>("ResetPassword"))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-row">
            <div class="col-md-12 form-group">
             
                <div class="registerLables">
                    @Html.LabelFor(model => model.PasswordQuestionAnswer)
                </div>
                @Html.TextBoxFor(model => model.PasswordQuestionAnswer, new { placeholder = "Your answer for the security question" })
                @Html.ValidationMessageFor(model => model.PasswordQuestionAnswer)
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-6 form-group">
                <div class="registerLables">
                    @Html.LabelFor(model => model.EmailAddress)
                </div>
                @Html.TextBoxFor(model => model.EmailAddress, new { placeholder = "Email" })
                @Html.ValidationMessageFor(model => model.EmailAddress)
            </div>
            <div class="col-md-6 form-group">
                <div class="registerLables">
                    @Html.LabelFor(model => model.Password)
                </div>
                @Html.PasswordFor(model => model.Password, new { placeholder = "New Password" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>
        @Html.ValidationSummary(true)
        <div class="text-center">
            <button class="yourKidsButton" name="login" type="submit">Reset Password</button>
        </div>
    </fieldset>
}