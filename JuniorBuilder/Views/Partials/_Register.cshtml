@using JuniorBuilder.Controllers
@model JuniorBuilder.Models.RegisterModel
@using (Html.BeginUmbracoForm<RegisterController>("Register"))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-row">
            <div class="col-md-6 form-group">
                <div class="registerLables">
                    @Html.LabelFor(model => model.Name)
                </div>                
                @Html.TextBoxFor(model => model.Name, new { placeholder = "Name and surname" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div class="col-md-6 form-group">
                <div class="registerLables">
                    @Html.LabelFor(model => model.EmailAddress)
                </div>
                @Html.TextBoxFor(model => model.EmailAddress, new { placeholder = "Email" })
                @Html.ValidationMessageFor(model => model.EmailAddress)
                </div>
            </div>
        <div class="form-row">
            <div class="col-md-6 form-group">
                <div class="registerLables">
                    @Html.LabelFor(model => model.PasswordQuestionAnswer)
                </div>
                @Html.TextBoxFor(model => model.PasswordQuestionAnswer, new { placeholder = "Your answer for the security question" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>

            <div class="col-md-6 form-group">
                <div class="registerLables">
                    @Html.LabelFor(model => model.Password)
                </div>
                @Html.PasswordFor(model => model.Password, new { placeholder = "Password" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>

        </div>
        @Html.ValidationSummary(true)
        <div class="text-center">
            <button class="yourKidsButton" name="login" type="submit">Register</button>
        </div>
    </fieldset>
}