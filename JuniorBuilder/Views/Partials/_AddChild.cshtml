@using JuniorBuilder.Controllers
@model JuniorBuilder.Models.AddChildModel
@using (Html.BeginUmbracoForm<AddChildController>("AddChild"))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <div class="form-row">
            <div class="col-md-6 form-group">
                <div class="registerLables">
                    @Html.LabelFor(model => model.Name)
                </div>
                @Html.TextBoxFor(model => model.Name, new { placeholder = "Name and surname" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>           
        </div>
        @Html.ValidationSummary(true)
        <div class="text-center">
            <button class="yourKidsButton" name="login" type="submit">Register</button>
        </div>        
    </fieldset>
}