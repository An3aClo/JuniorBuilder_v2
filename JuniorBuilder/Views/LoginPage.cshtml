@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.LoginPage>
	@using ContentModels = Umbraco.Web.PublishedModels;
	@{
	Layout = null;
	}
	@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.LoginPage>
		@using ContentModels = Umbraco.Web.PublishedModels;
		@{
		Layout = "master.cshtml";
		}
	<main id="main">
		<!--hero section-->
		<section id="hero">
			<div class="container headerSpacing">
				<div class="row d-flex align-items-center">
					<div class=" col-lg-6 py-5 py-lg-0 order-2 order-lg-1" data-aos="fade-right">
						@if (Model.HeroTittle != null)
						{
							<h1>@Model.HeroTittle</h1>
						}
						@if (Model.HeroDescription != null)
						{
							<h2>@Model.HeroDescription</h2>
							@*<a href="#about" class="btn-get-started scrollto">Get Started</a>*@
						}
					</div>
					<div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="fade-left">
						@if (Model.HeroImage != null)
						{
							<img src="@Model.HeroImage.Url" class="img-fluid" alt="img">
						}
					</div>
				</div>
			</div>
		</section><!-- End Hero -->
		<!--introduction-->
		<section id="about" class="about section-bg">
			<div class="container">
				<div class="row">
					<div class="image col-xl-5 d-flex align-items-stretch justify-content-center justify-content-lg-start"></div>
					<div class="col-xl-7 pl-0 pl-lg-5 pr-lg-1 d-flex align-items-stretch">
						<div class="content d-flex flex-column justify-content-center">
							@if (!string.IsNullOrEmpty(Model.IntroductionSectionIntroductionHeader))
							{
								<h3 data-aos="fade-in" data-aos-delay="100">@Model.IntroductionSectionIntroductionHeader</h3>
							}
							@if (Model.IntroductionSectionIntroductionDescription != null)
							{
								<p data-aos="fade-in">@Model.IntroductionSectionIntroductionDescription</p>
							}
							<div class="row">
								<div class="col-md-6 icon-box" data-aos="fade-up">
									@if (!string.IsNullOrEmpty(Model.FirstIntroBlockTitle) && Model.FirstIntroBlockDescription != null)
									{
										<i class="bx bx-receipt"></i>
										<h4><a href="#">@Model.FirstIntroBlockTitle</a></h4>
										<p>@Model.FirstIntroBlockDescription</p>
									}
								</div>
								<div class="col-md-6 icon-box" data-aos="fade-up" data-aos-delay="300">
									@if (!string.IsNullOrEmpty(Model.FourthIntroBlockTitle) && Model.FourthIntroBlockDescription != null)
									{
										<i class="bx bx-shield"></i>
										<h4><a href="#">@Model.FourthIntroBlockTitle</a></h4>
										<p>@Model.FourthIntroBlockDescription</p>
									}
								</div>
								<div class="col-md-6 icon-box" data-aos="fade-up" data-aos-delay="200">
									@if (!string.IsNullOrEmpty(Model.ThirdIntroBlockTitle) && Model.ThirdIntroBlockDescription != null)
									{
										<i class="bx bx-images"></i>
										<h4><a href="#">@Model.ThirdIntroBlockTitle</a></h4>
										<p>@Model.ThirdIntroBlockDescription</p>
									}
								</div>
								<div class="col-md-6 icon-box" data-aos="fade-up" data-aos-delay="100">
									@if (!string.IsNullOrEmpty(Model.SecondIntroBlockTitle) && Model.SecondIntroBlockDescription != null)
									{
										<i class="bx bx-cube-alt"></i>
										<h4><a href="#">@Model.SecondIntroBlockTitle</a></h4>
										<p>@Model.SecondIntroBlockDescription</p>
									}
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		<!-- End introduction Section -->
		<!-- Secondary Introduction -->
		<section class="page-section section-bg" id="about">
			<div class="container">
				<div class="section-title">
					@if (!string.IsNullOrEmpty(Model.IntroductionSectionIntroductionHeader))
					{
						<h2 data-aos="fade-in">@Model.IntroductionSectionIntroductionHeader</h2>
					}
					@if (Model.IntroductionSectionIntroductionDescription != null)
					{
						<p data-aos="fade-in">@Model.IntroductionSectionIntroductionDescription</p>
					}
				</div>
			
					@if (!string.IsNullOrEmpty(Model.FifthIntroBlockTitle) && Model.FifthIntroBlockDescription != null)
					{
						<div class="row funfactLastBlock" onclick="fifthBlock()">
							<p>@Model.FifthIntroBlockTitle</p>
						</div>
						<div id="fifthBlock" class="funfactInformationLastBox">
							@Model.FifthIntroBlockDescription
						</div>
					}
			
			</div>
		</section>


		<!-- ======= Login Section ======= -->
		<section id="contact" class="contact section-bg">
			<div class="container">
				<div class="section-title">
					@if (!string.IsNullOrWhiteSpace(@Model.IntroductionTitle))
					{
						<h2 data-aos="fade-in">@Model.IntroductionTitle</h2>
					}
					@if (@Model.IntroductionDescription != null)
					{
						<p data-aos="fade-in">@Model.IntroductionDescription</p>
					}
				</div>
				<div class="row">
					<div class="col-lg-12">
						<form action="forms/contact.php" method="post" role="form" class="php-email-form" data-aos="fade-up">
							<div class="form-row">
								<div class="col-md-6 form-group">
									@if (!string.IsNullOrWhiteSpace(@Model.LoginEmailAddressPlaceholder))
									{
										<input type="email" class="form-control" name="email" id="email" placeholder="@Model.LoginEmailAddressPlaceholder" data-rule="email" data-msg="Please enter a valid email" />
									}
									<div class="validate"></div>
								</div>
								<div class="col-md-6 form-group">
									@if (!string.IsNullOrWhiteSpace(@Model.LoginPasswordPlaceholder))
									{
										<input type="password" class="form-control" name="password" id="email" placeholder="@Model.LoginPasswordPlaceholder" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
									}
									<div class="validate"></div>
								</div>
							</div>
							<div class="text-center">
								<br />
								@if (!string.IsNullOrWhiteSpace(@Model.LoginButtonText) && @Model.LoginButtonLink != null)
								{
									<a class="yourKidsButton" href="@Model.LoginButtonLink.Url">@Model.LoginButtonText</a>
								}
								@*<br /><br />
								@if (!string.IsNullOrWhiteSpace(Model.ForgotPasswordText) && Model.ForgotPasswordLink != null)
								{
								<a class="smallButtonLink" href="@Model.ForgotPasswordLink.Url" target="_blank">@Model.ForgotPasswordText</a>
								}
								@if (!string.IsNullOrWhiteSpace(Model.RegisterText) && Model.RegisterLink != null)
								{
								<a class="smallButtonLink">|</a>
								<a class="smallButtonLink" href="@Model.RegisterLink.Url" target="_blank">@Model.RegisterText</a>
								}*@
								<br />
								<a class="smallButtonLink" href="/">Click here to act if you are logging in. Note this will be removed</a>
								<br />
							</div>
						</form>
					</div>
				</div>
			</div>
		</section><!-- End Login Section -->
	</main><!-- End #main -->
