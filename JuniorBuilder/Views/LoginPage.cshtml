@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.LoginPage>
@using Umbraco.Web.Models
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "master.cshtml";
}
<main id="main">
	<!-- ======= Login Section ======= -->
	<section id="loginSection" class="contact section-bg">
		<div class="container">
			<div class="section-title">
				@if (!string.IsNullOrWhiteSpace(@Model.IntroductionTitle))
				{
					<h2 data-aos="fade-in">@Model.IntroductionTitle</h2>
				}
				@if (@Model.IntroductionDescription != null)
				{
					<p data-aos="fade-in">@Model.IntroductionDescription</p>
				}
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="php-email-form" data-aos="fade-up">
						<div class="row">
							<div class="col-md-6">
								<label>Email</label>
							</div>
							<div class="col-md-6">
								<label>Password</label>
							</div>
						</div>
						<div class="errorMsg">
							@{ Html.RenderPartial("~/Views/Partials/_Login.cshtml", new LoginModel()); }
						</div>
						<div class="text-center">
							@if (!string.IsNullOrWhiteSpace(Model.ForgotPasswordText) && Model.ForgotPasswordLink != null)
							{
								<a class="smallButtonLink" href="@Model.ForgotPasswordLink.Url">@Model.ForgotPasswordText</a>
							}
							@if (!string.IsNullOrWhiteSpace(Model.RegisterText) && Model.RegisterLink != null)
							{
								<a class="smallButtonLink">|</a>
								<a class="smallButtonLink" href="@Model.RegisterLink.Url">@Model.RegisterText</a>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- End Login Section -->
</main>
<!--Back to top-->
<a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>